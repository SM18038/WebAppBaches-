<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <persistence-unit name="Baches_PU" transaction-type="JTA">
    <jta-data-source>jdbc/bachesTPI</jta-data-source>
    <class>com.mycompany.baches.entity.Estado</class>
    <class>com.mycompany.baches.entity.Objeto</class>
    <class>com.mycompany.baches.entity.ObjetoEstado</class>
    <class>com.mycompany.baches.entity.Ruta</class> 
    <class>com.mycompany.baches.entity.TipoObjeto</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
        <property name="javax.persistence.schema-generation.database.action" value="create"/>
        <property name= "javax.persistence.sql-load-script-source" value="META-INF/sql/datos.sql"/>
    </properties>
  </persistence-unit>
</persistence>
